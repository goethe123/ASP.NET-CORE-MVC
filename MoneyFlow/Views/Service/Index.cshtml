@model List<MoneyFlow.Models.ServiceVM>
@{

}
<div class="row">
    <div class="col-sm-6">
        <h2>Services</h2>
    </div>
    <div class="col-sm-6 text-end">
        <a href ="/Service/New" class="btn btn-success">New Service</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Type</td>
                        <td>
                            <a href="#" class="btn btn-primary btn-sm">Edit</a>
                            <a href="#" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


